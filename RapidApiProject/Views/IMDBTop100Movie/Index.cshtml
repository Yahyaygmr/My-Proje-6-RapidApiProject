@model List<RapidApiProject.Models.MovieViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>IMDB Top 100 Movie</h1>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İmdb Link</th>
        </tr>
    @foreach (var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title</td>
                <td><a href="@item.imdb_link" class="btn btn-secondary">IMDB Link</a></td>
            </tr>
        }
    </table>
</div>

